<!DOCTYPE html>
<html>
<head>
  <title>ForcedParams</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar">
	<% if current_user %>
		<button type="button" class="btn btn-default navbar-btn navbar-left"><%= link_to 'Log Out', logout_path, method: :delete %></button>
		<%= link_to "Logged in as: " + current_user.name, user_path(current_user), {class: "btn btn-default navbar-btn navbar-left"} %>
	<% else %>
		<%= link_to 'Log In', login_path, {class: "btn btn-default navbar-btn navbar-left"} %>
		<%= link_to 'Sign Up', new_user_path, {class: "btn btn-default navbar-btn navbar-left"} %>
	<% end %>
</div>

<%= yield %>

</body>
</html>
